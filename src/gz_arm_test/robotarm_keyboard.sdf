        <visual name='visual'><geometry><mesh><uri>/home/mac/gz_arm_test/meshes/link_1.stl</uri></mesh></geometry><material><ambient>0.1 0.1 0.8 1</ambient><diffuse>0.1 0.1 0.8 1</diffuse><specular>0.1 0.1 0.8 1</specular></material></visual>
        <collision name='collision'><geometry><mesh><uri>/home/mac/gz_arm_test/meshes/link_1.stl</uri></mesh></geometry></collision>
      </link>
      <joint name='joint_1' type='revolute'><pose relative_to='base_link'>0 0 0.0814 0 0 0</pose><parent>base_link</parent><child>link_1</child><axis><xyz>0 0 1</xyz><limit><lower>-1.54</lower><upper>1.54</upper><effort>100</effort></limit><dynamics><damping>0.1</damping></dynamics></axis></joint>
      
      <link name='link_2'>
        <pose relative_to="joint_2">0 0 0 0 0 0</pose>
        <inertial><mass>0.2</mass><inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia></inertial>
