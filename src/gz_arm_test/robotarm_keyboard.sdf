      <link name='link_3'>
        <pose relative_to="joint_3">0 0 0 0 0 0</pose>
        <inertial><mass>0.2</mass><inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia></inertial>
        <visual name='visual'><geometry><mesh><uri>/home/mac/gz_arm_test/meshes/link_3.stl</uri></mesh></geometry><material><ambient>0.1 0.1 0.8 1</ambient><diffuse>0.1 0.1 0.8 1</diffuse><specular>0.1 0.1 0.8 1</specular></material></visual>
